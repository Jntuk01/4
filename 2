Exp-2:user xml:
CREATE.PHP:

<?php
$xml = new SimpleXMLElement('<users></users>');

for ($i = 1; $i <= 10; $i++) {
    $user = $xml->addChild('user');
    $user->addChild('id', $i);
    $user->addChild('name', 'User' . $i);
    $user->addChild('email', 'user' . $i . '@example.com');
    $user->addChild('phone', '123456789' . $i);
}

$xml->asXML('users.xml');
echo "XML file created successfully.";
?>


EXECUTE.PHP:

<?php
if (isset($_GET['id'])) {
    $id = $_GET['id'];

    $xml = simplexml_load_file('users.xml');

    $found = false;

    foreach ($xml->user as $user) {
        if ((string)$user->id == $id) {

            echo "<h2>User Details</h2>";
            echo "ID: " . $user->id . "<br>";
            echo "Name: " . $user->name . "<br>";
            echo "Email: " . $user->email . "<br>";
            echo "Phone: " . $user->phone . "<br>";
            $found = true;
            break;
        }
    }

    if (!$found) {
        echo "User with ID $id not found.";
    }
} else {
?>
    <form method="get">
        <label for="id">Enter User ID (1‚Äì10):</label>
        <input type="number" name="id" id="id" required>
        <input type="submit" value="Search">
    </form>
<?php
}
?>

