  <script>
    let registeredUser = {}; // store user details temporarily

    // Navigation
    function showForm(id) {
      document.querySelectorAll('.form-section').forEach(sec => sec.classList.remove('active'));
      document.getElementById(id).classList.add('active');

      // auto load profile if chosen
      if (id === "profile") {
        displayProfile();
      }
    }

    // Registration Validation
    function validateRegistration() {
      let name = document.getElementById("reg-name").value.trim();
      let email = document.getElementById("reg-email").value.trim();
      let password = document.getElementById("reg-password").value;
      let confirm = document.getElementById("reg-confirm").value;

      if (name === "") {
        alert("Name is required!");
        return false;
      }
      let emailPattern = /^[^ ]+@[^ ]+\.[a-z]{2,3}$/;
      if (!email.match(emailPattern)) {
        alert("Enter a valid email address!");
        return false;
      }
      if (password.length < 6) {
        alert("Password must be at least 6 characters!");
        return false;
      }
      if (password !== confirm) {
        alert("Passwords do not match!");
        return false;
      }

      // Save registered user
      registeredUser = { name, email, password };
      alert("Registration Successful! Now you can login.");
      showForm("login");
      return false;
    }

    // Login Validation
    function validateLogin() {
      let email = document.getElementById("login-email").value.trim();
      let password = document.getElementById("login-password").value;

      if (email === "" || password === "") {
        alert("Email and Password are required!");
        return false;
      }
      if (registeredUser.email !== email || registeredUser.password !== password) {
        alert("Invalid credentials!");
        return false;
      }
      alert("Login Successful!");
      showForm("profile");
      return false;
    }

    // Profile Display
    function displayProfile() {
      if (!registeredUser.name) {
        document.getElementById("profile-info").innerHTML = "<p>No user logged in.</p>";
        return;
      }
      document.getElementById("profile-info").innerHTML = `
        <div class="profile-data">
          <p><b>Name:</b> ${registeredUser.name}</p>
          <p><b>Email:</b> ${registeredUser.email}</p>
        </div>
      `;
    }

    // Payment Validation
    function validatePayment() {
      let card = document.getElementById("pay-card").value.trim();
      let expiry = document.getElementById("pay-expiry").value.trim();
      let cvv = document.getElementById("pay-cvv").value.trim();

      let cardPattern = /^[0-9]{16}$/;
      if (!card.match(cardPattern)) {
        alert("Enter a valid 16-digit card number!");
        return false;
      }

      let expiryPattern = /^(0[1-9]|1[0-2])\/\d{2}$/; // MM/YY
      if (!expiry.match(expiryPattern)) {
        alert("Enter expiry in MM/YY format!");
        return false;
      }

      let cvvPattern = /^[0-9]{3}$/;
      if (!cvv.match(cvvPattern)) {
        alert("Enter a valid 3-digit CVV!");
        return false;
      }

      alert("Payment Successful!");
      return true;
    }
  </script>
</head>
<body>

  <h1>User Portal</h1>
  <nav>
    <button onclick="showForm('registration')">Registration</button>
