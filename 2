      <input type="text" id="pay-card" placeholder="Card Number (16 digits)">
      <input type="text" id="pay-expiry" placeholder="Expiry (MM/YY)">
      <input type="password" id="pay-cvv" placeholder="CVV (3 digits)">
      <input type="submit" value="Pay Now">
