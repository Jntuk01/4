Login_action.jsp:
<%@ page import="java.sql.*" %>
<%@ page import="javax.servlet.http.*" %>
<%@ page contentType="text/html;charset=UTF-8" language="java" %>
<%
    String email = request.getParameter("email");
    String password = request.getParameter("password");

    String url = "jdbc:mysql://localhost:3306/bookstore_db";
    String dbUser = "root"; // XAMPP default user
    String dbPass = "";     // XAMPP default password

    try {
        Class.forName("com.mysql.cj.jdbc.Driver");
        Connection con = DriverManager.getConnection(url, dbUser, dbPass);

        String sql = "SELECT * FROM users WHERE email=? AND password=?";
        PreparedStatement ps = con.prepareStatement(sql);
        ps.setString(1, email);
        ps.setString(2, password);

        ResultSet rs = ps.executeQuery();

        if(rs.next()) {
            // Store user info in session
            HttpSession sessionObj = request.getSession();
            sessionObj.setAttribute("username", rs.getString("username"));
            sessionObj.setAttribute("email", rs.getString("email"));

            // Redirect to profile page
            response.sendRedirect("profile.jsp");
        } else {
            out.println("<h3 style='color:red;text-align:center;'>Invalid Email or Password!</h3>");
            out.println("<p style='text-align:center;'><a href='login.jsp'>Try Again</a></p>");
        }

        rs.close();
        ps.close();
        con.close();

    } catch(Exception e) {
        out.println("Error: " + e.getMessage());
    }
%>

Profile.jsp:
<%@ page import="javax.servlet.http.*" %>
<%
    HttpSession sessionObj = request.getSession(false);
    if (sessionObj == null || sessionObj.getAttribute("username") == null) {
        response.sendRedirect("login.jsp");
        return;
    }

    String username = (String) sessionObj.getAttribute("username");
    String email = (String) sessionObj.getAttribute("email");
%>
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>User Profile - Online Book Store</title>
  <link rel="stylesheet" href="css/style.css">
</head>
<body>

  <div class="container">
    <h1>User Profile</h1>

    <div class="info">
      <p><strong>Name:</strong> <%= username %></p>
      <p><strong>Email:</strong> <%= email %></p>
    </div>

    <hr>

    <div class="buttons">
      <button>Edit Profile</button>
      <button>Change Password</button>
      <form action="logout.jsp" method="post" style="display:inline;">
        <button type="submit">Logout</button>
      </form>
    </div>
  </div>

  <footer>
    <p>&copy; 2025 Online Book Store</p>
  </footer>

</body>
</html>





Exp-12:visual beans:

<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8" />
<meta name="viewport" content="width=device-width, initial-scale=1" />
<title>Visual Bean</title>
<style>
  #bean {
    width: 150px;
    height: 150px;
    margin: 50px auto;
    cursor: pointer;
    transition: background-color 0.3s, border-radius 0.3s;
  }
</style>
</head>
<body>

<div id="bean"></div>

<script>
  // Property: true = square, false = circle
  let shape = true;

  const bean = document.getElementById('bean');

  // Function to get a random color
  function getRandomColor() {
    return '#' + Math.floor(Math.random() * 16777215).toString(16);
  }

  // Update bean appearance
  function updateBean() {
    bean.style.backgroundColor = getRandomColor();
    bean.style.borderRadius = shape ? '0%' : '50%';
  }

  // Initial render
  updateBean();

  // On click: change color and toggle shape
  bean.addEventListener('click', () => {
    shape = !shape;  // Toggle shape
    updateBean();
  });
</script>

</body>
</html>
       
