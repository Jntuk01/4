      padding: 10px 20px;
      cursor: pointer;
    }
    .form-section {
      display: none;
      border: 1px solid #ccc;
      padding: 20px;
      border-radius: 8px;
      max-width: 400px;
    }
    .form-section.active {
      display: block;
    }
    input {
      width: 100%;
      padding: 8px;
      margin: 6px 0 12px 0;
    }
    input[type=submit] {
      width: auto;
      background: #007BFF;
      color: white;
      border: none;
      cursor: pointer;
    }
    .profile-data {
      background: #f9f9f9;
