Exp-10:jdbc connectivity:
Table creation:-
CREATE TABLE users (
                    id INT AUTO_INCREMENT PRIMARY KEY,
                    name VARCHAR(50) NOT NULL,
                    password VARCHAR(50) NOT NULL,
                    email VARCHAR(100) UNIQUE NOT NULL,
                    phone VARCHAR(15)
                )

Java code:-(JDBCUserOperations.java)
import java.sql.*;
import java.util.Scanner;

public class JDBCUserOperations {
    public static void main(String[] args) {
        String url = "jdbc:mysql://localhost:3306/web_lab"; // Database name: web_lab
        String user = "root"; // Default MySQL username in XAMPP
        String password = ""; // Empty password (since phpMyAdmin opens without password)

        Scanner sc = new Scanner(System.in);
        Connection con = null;

        try {
            // Step 1: Load JDBC driver
            Class.forName("com.mysql.cj.jdbc.Driver");

            // Step 2: Establish connection
            con = DriverManager.getConnection(url, user, password);
            System.out.println("‚úÖ Connected to MySQL database successfully!");

            // Step 3: Create 'users' table if not exists
            String createTable = """
                CREATE TABLE IF NOT EXISTS users (
                    id INT AUTO_INCREMENT PRIMARY KEY,
                    name VARCHAR(50) NOT NULL,
                    password VARCHAR(50) NOT NULL,
                    email VARCHAR(100) UNIQUE NOT NULL,
                    phone VARCHAR(15)
                )
            """;
            try (Statement st = con.createStatement()) {
                st.executeUpdate(createTable);
            }

            // Menu-driven program
            while (true) {
                System.out.println("\n===== USER DATABASE MENU =====");
                System.out.println("1. Register new user");
                System.out.println("2. View all users");
                System.out.println("3. Search user by name");
                System.out.println("4. Update user phone number");
                System.out.println("5. Delete user by email");
                System.out.println("6. Exit");
                System.out.print("Enter your choice: ");
                int choice = sc.nextInt();
                sc.nextLine(); // consume newline

                switch (choice) {
                    case 1:
                        System.out.print("Enter Name: ");
                        String name = sc.nextLine();
                        System.out.print("Enter Password: ");
                        String pass = sc.nextLine();
                        System.out.print("Enter Email: ");
                        String email = sc.nextLine();
                        System.out.print("Enter Phone Number: ");
                        String phone = sc.nextLine();

                        String insertQuery = "INSERT INTO users (name, password, email, phone) VALUES (?, ?, ?, ?)";
                        try (PreparedStatement ps = con.prepareStatement(insertQuery)) {
                            ps.setString(1, name);
                            ps.setString(2, pass);
                            ps.setString(3, email);
                            ps.setString(4, phone);
                            ps.executeUpdate();
                            System.out.println("‚úÖ User registered successfully!");
                        }
                        break;

                    case 2:
                        String selectQuery = "SELECT * FROM users";
                        try (Statement st = con.createStatement();
                             ResultSet rs = st.executeQuery(selectQuery)) {
                            System.out.println("\n--- Registered Users ---");
                            System.out.printf("%-5s %-15s %-25s %-15s%n", "ID", "Name", "Email", "Phone");
                            System.out.println("-----------------------------------------------------------");
                            while (rs.next()) {
                                System.out.printf("%-5d %-15s %-25s %-15s%n",
                                        rs.getInt("id"),
                                        rs.getString("name"),
                                        rs.getString("email"),
                                        rs.getString("phone"));
                            }
                        }
                        break;

                    case 3:
                        System.out.print("Enter name to search: ");
                        String searchName = sc.nextLine();
                        String searchQuery = "SELECT * FROM users WHERE name LIKE ?";
                        try (PreparedStatement ps = con.prepareStatement(searchQuery)) {
                            ps.setString(1, "%" + searchName + "%");
                            ResultSet rs = ps.executeQuery();
                            boolean found = false;
                            while (rs.next()) {
                                if (!found) {
                                    System.out.println("\n--- Search Results ---");
                                    System.out.printf("%-5s %-15s %-25s %-15s%n", "ID", "Name", "Email", "Phone");
                                    System.out.println("-----------------------------------------------------------");
                                    found = true;
                                }
                                System.out.printf("%-5d %-15s %-25s %-15s%n",
                                        rs.getInt("id"),
                                        rs.getString("name"),
                                        rs.getString("email"),
                                        rs.getString("phone"));
                            }
                            if (!found) System.out.println("‚ùå No user found with name: " + searchName);
                        }
                        break;

                    case 4:
                        System.out.print("Enter email of user to update: ");
                        String updateEmail = sc.nextLine();
                        System.out.print("Enter new phone number: ");
                        String newPhone = sc.nextLine();

                        String updateQuery = "UPDATE users SET phone=? WHERE email=?";
                        try (PreparedStatement ps = con.prepareStatement(updateQuery)) {
                            ps.setString(1, newPhone);
                            ps.setString(2, updateEmail);
                            int rows = ps.executeUpdate();
                            if (rows > 0)
                                System.out.println("‚úÖ Phone number updated successfully!");
                            else
                                System.out.println("‚ùå No user found with that email.");
                        }
                        break;

                    case 5:
                        System.out.print("Enter email of user to delete: ");
                        String deleteEmail = sc.nextLine();
                        String deleteQuery = "DELETE FROM users WHERE email=?";
                        try (PreparedStatement ps = con.prepareStatement(deleteQuery)) {
                            ps.setString(1, deleteEmail);
                            int rows = ps.executeUpdate();
                            if (rows > 0)
                                System.out.println("‚úÖ User deleted successfully!");
                            else
                                System.out.println("‚ùå No user found with that email.");
                        }
                        break;

                    case 6:
                        System.out.println("üëã Exiting program...");
                        sc.close();
                        con.close();
                        System.exit(0);

                    default:
                        System.out.println("‚ö†Ô∏è Invalid choice! Try again.");
                }
            }
        } catch (Exception e) {
            e.printStackTrace();
        }
    }
}

Compile: javac -cp ".;mysql-connector-j-9.4.0.jar" JDBCUserOperations.java
Run:java -cp ".;mysql-connector-j-9.4.0.jar" JDBCUserOperations


